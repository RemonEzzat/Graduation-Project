<!-- @format -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/app.css" />

    <title>Registration</title>
  </head>

  <body>
    <div class="main-box">
      <div class="second-box shadow-sm">
        <div>
          <img src="/image/logo.png" alt="logo" class="s-img" />
          <form method='POST', action='/users/register'>

<form  action="/users/register" method="POST">


            <div class="form-group">
              <label for="exampleInputFirstname">First name</label>
              <input
                type="text"
                name="firstname"
                class="form-control"
                id="exampleInputFirstname"
              />
            </div>

            <div class="form-group">
              <label for="exampleInputLastname">Last name</label>
              <input
                type="text"
                name="lastname"
                class="form-control"
                id="exampleInputLastname"
              />
            </div>

            <div class="form-group">
              <label for="exampleInputFirstname">Username</label>
              <input
                type="text"
                name="username"
                class="form-control"
                id="exampleInputUsername"
              />
            </div>

             <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input
                type="email"
                name="email"
                class="form-control"
                id="exampleInputEmail1"
              />
            </div>

            <div class="form-group">
              <label for="exampleInputPassword1">Password</label>
              <input
                type="password"
                name="password"
                class="form-control"
                id="exampleInputPassword1"
              />
            </div>

            <div class="form-group">
              <label for="exampleInputPhone">Phone</label>
              <input
                type="Phone"
                name="phone"
                class="form-control"
                id="exampleInputPhone"
              />
            </div>

            <div class="form-group">
              <label for="exampleInputBirthdate">Birth Date</label>
              <input
                type="date"
                name="dateOfbirth"
                class="form-control"
                id="exampleInputBirthdate"
              />
            </div>


              <label for="exampleMale">Male</label>
              <input type="radio" name="gender" value="male">

              <label for="exampleFemale">Female</label>
              <input type="radio" name="gender" value="female">
              <br />

            <button type="submit" value='Submit' class="btn btn-outline-light btn-lg">
              Sign up
            </button>
          </form>
        </div>
        <p>Already have an account? <a href="/users/login">Login</a></p>
        <p>Or go <a href="/">home</a>.</p>

      </div>
    </div>
  </body>
</html>
